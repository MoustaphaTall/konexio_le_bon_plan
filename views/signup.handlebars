{{> header}}
<div class="container">
    <div class="row">
        <div class="col-12 signup">
            <h1 class="signup-title">Sign up</h1>
            <form action="/signup" enctype="multipart/form-data" method="POST" class="col-lg-7">
                <div class="form-group">
                    <label for="signupUsername">Username</label>
                    <input 
                        class="form-control" 
                        name="username" 
                        id="signupUsername" 
                        placeholder="Enter name" 
                    />
                </div>
                <div class="form-group">
                    <label for="signupPassword">Password</label>
                    <input 
                        class="form-control" 
                        type="password" 
                        name="password" 
                        id="signupPassword" 
                        placeholder="Password" 
                    />
                </div>
                <div class="form-group">
                    <label for="signupFirstname">Firstname</label>
                    <input 
                        class="form-control" 
                        id="signupFirstname" 
                        name="firstname" 
                        placeholder="Enter first name" 
                    />
                </div>
                <div class="form-group">
                    <label for="signupSurname">Surname</label>
                    <input 
                        class="form-control" 
                        id="signupSurname" 
                        name="surname" 
                        placeholder="Enter surname" 
                    />
                </div>
                <div class="form-group">                    
                    <input type="file" class="form-control-file signup-file" name="profilePic" />
                </div>
                <button type="submit" class="btn btn-warning">Submit</button>
            </form>
        </div>
    </div>
</div>