            <div class="card-img product-imgcontainer">
              <img src={{images.[0]}} alt="{{name}}" /> 
            </div>
          </div>

          <div class="col-md-8">
            <div class="card-body">        
              <h2 class="card-title">{{name}}</h2>
              
              <p class="card-text price"><strong>{{price}}â‚¬</strong></p>        
              <p class="card-text">{{description}}</p>              
            </div>
          </div>
        </div></a>
      </div>
    </div>        
    {{/each}}      
  </div>
</div>